<%= render partial: "events/tabs" %>

<div class="row">
  <div class="col-sm-10">
    <h3>Enter ticket information</h3>

    <%= render partial: 'flash' %>

    <%= form_for [@event, @order], url: wizard_path do |f| %>
      <%= fields_for :tickets do |tickets| %>
        <table class="table table-condensed">
          <thead>
            <th>Ticket</th>
            <th>Name</th>
            <th>Email</th>
          </thead>
          <tbody>
            <%= render partial: 'ticket', collection: @order.tickets, locals: {tickets: tickets} %>
          </tbody>
        </table>
      <% end %>
      <ul class="pager">
        <li class="previous">
          <%= link_to raw('&larr; Back to info'), previous_wizard_path %>
        </li>
        <li class="next"><%= link_to raw('Save ticket information &rarr;'), '#', onclick: "$(this).closest('form').submit()" %></li>
      </ul>
    <% end %>

  </div>
</div>
