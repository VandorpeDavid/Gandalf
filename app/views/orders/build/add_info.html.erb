<%= render partial: "events/tabs" %>

<div class="row">
  <div class="col-sm-6">
    <h3>Enter payment information</h3>

    <%= form_errors @order %>
    <%= render partial: 'flash' %>

    <%= form_for [@event, @order], url: wizard_path do |f| %>
      <%= form_text_field f, :name %>
      <%= form_email_field f, :email %>
      <%= form_email_field f, :email_confirmation %>
      <%= form_text_field f, :gsm %>
      <ul class="pager">
        <li class="previous">
          <%= link_to raw('&larr; Back to tickets'), previous_wizard_path %>
        </li>
        <li class="next"><%= link_to raw('Save information &rarr;'), '#', onclick: "$(this).closest('form').submit()" %></li>
      </ul>
    <% end %>
  </div>
</div>
