<div class="modal fade" id="filter-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Filter</h4>
      </div>
      <%= form_for @ordersgrid, url: event_orders_path, method: :get do |f| %>
      <div class="modal-body">
        <%= form_text_field f, :name %>
        <%= form_text_field f, :email %>
        <%= form_text_field f, :payment_code %>
        <%= form_check_box f, :only_paid %>
        <%= form_check_box f, :only_unpaid %>
      </div>
      <div class="modal-footer">
        <%= link_to "Reset", event_orders_path(@event), class: 'btn btn-group btn-default' %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit "Filter", class: 'btn btn-group btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
